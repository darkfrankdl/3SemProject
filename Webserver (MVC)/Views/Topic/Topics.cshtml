@model IEnumerable<Client.Models.TopicClient>

@{
    ViewData["Title"] = "Topics";
}

<h1>Topics</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.CategoryName }) |
                @Html.ActionLink("Delete", "Delete", new { item.CategoryName }) |
                @Html.ActionLink("Posts", "Posts", "Post", new {item.CategoryName}) |
            </td>
        </tr>
}
    </tbody>
</table>
