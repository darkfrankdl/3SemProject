            </div>
            <div class="form-group" style="visibility:hidden">
                <label asp-for="TopicCategoryName" class="control-label"></label>
                <input asp-for="TopicCategoryName" class="form-control" value="@TempData["categoryName"]" />
                <span asp-validation-for="TopicCategoryName" class="text-danger"></span>
            </div>
