@model Client.Models.CommentClient

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostUsername)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostUsername)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type=hidden name="DateTime" value="@Model.DateTime" />
        <input type=hidden name="Username" value=@Model.Username />
        <input type=hidden name="Text" value=@Model.Text />
        <input type=hidden name="PostDateTime" value="@Model.PostDateTime" />
        <input type=hidden name="PostUsername" value=@Model.PostUsername />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Comments">Back to List</a>
    </form>
</div>
